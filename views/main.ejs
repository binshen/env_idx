            html += '  <li><a href="/monitor/mac/' + mac + '/1"><p>' + x1 + 'ug/m³</p>pm2.5</a></li>';
            html += '  <li><a href="/monitor/mac/' + mac + '/2"><p>' + x11 + '℃</p>温度</a></li>';
            html += '  <li><a href="/monitor/mac/' + mac + '/3"><p>' + x10 + '%</p>湿度</a></li>';
            html += '  <li class="last"><a href="/monitor/mac/' + mac + '/4"><p>' + x9 + 'mg/m³</p>甲醛</a></li>';
            html += '</ul>';
            $("#_main_" + i).html(html);
        });
    }

    $(function() {
        loadDeviceList();

        setInterval(function() {
            updateCurrentPage();
        }, 6000);
    });
</script>