<%- include layouts/header.ejs %>
</head>
<body>
<nav class="clearfix">
    <a class="oper" href="/users">
        <img src="/images/ico_back.png" />返回
    </a>修改昵称
</nav>
<div class="main_box">
    <ul class="equip_list3">
        <li>
            <input type="text" id="nicknane" name="nicknane" placeholder="用户昵称" value="<%= n_name %>">
        </li>
    </ul>
    <button class="btn_oper" id="btnUpdate">修 改</button>
</div>
</body>
</html>
<script>
    $(function() {
        $("#btnUpdate").click(function() {
            var nickname = $("#nicknane").val();
            if(nickname == "") {
                layer.alert("请输入用户昵称");
                return;
            }
            $.post(__api_base_url + "/user/<%= login_uid %>/update_name", {nickname:nickname}, function(data) {
                var success = data.success;
                if(success) {
                    window.location.href = "/users/<%= login_uid %>";
                } else {
                    layer.alert(data.error);
                }
            });
        });
    })
</script>